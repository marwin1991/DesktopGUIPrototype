<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="diceMaster.controller.CreateGameController">
    <children>
        <TextField fx:id="tableNameTextFiled" layoutX="150.0" layoutY="42.0" prefHeight="31.0" prefWidth="352.0"/>
        <ComboBox fx:id="gameTypeComboBox" layoutX="150.0" layoutY="83.0" prefWidth="150.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Poker"/>
                    <String fx:value="N+"/>
                    <String fx:value="N*"/>
                </FXCollections>
            </items>
            <value>
                <String fx:value="Poker"/>
            </value>
        </ComboBox>
        <Spinner fx:id="maxPlayersSpinner" amountToStepBy="1" initialValue="0" layoutX="150.0" layoutY="125.0" max="1000" min="0"
                 prefHeight="31.0" prefWidth="150.0" editable="true"/>
        <Spinner fx:id="easyBotsSpinner" amountToStepBy="1" initialValue="0" layoutX="150.0" layoutY="169.0" max="1000" min="0"
                 prefHeight="31.0" prefWidth="150.0" editable="true"/>
        <Spinner fx:id="hardBotsSpinner" amountToStepBy="1" initialValue="0" layoutX="150.0" layoutY="211.0" max="1000"
                 min="0" prefHeight="31.0" prefWidth="150.0" editable="true"/>

        <CheckBox fx:id="joinAsPlayerCheckBox" layoutX="150.0" layoutY="259.0" mnemonicParsing="false"
                  onMouseClicked="#handleJoinAsPlayerCheckBox" selected="true" text="Player"/>
        <CheckBox fx:id="joinAsObserverCheckBox" layoutX="300.0" layoutY="259.0" mnemonicParsing="false"
                  onMouseClicked="#handleJoinAsObserverCheckBox" selected="false" text="Observer"/>
        <Text layoutX="40.0" layoutY="63.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Table's name"/>
        <Text layoutX="40.0" layoutY="104.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Game's type"/>
        <Text layoutX="40.0" layoutY="146.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Max players"/>
        <Text layoutX="40.0" layoutY="190.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Easy bots"/>
        <Text layoutX="40.0" layoutY="232.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Hard bots"/>
        <Text layoutX="40.0" layoutY="275.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Join as"/>

        <Button layoutX="186.0" layoutY="306.0" mnemonicParsing="false" onMouseClicked="#handleCancelClicked"
                text="Cancel"/>
        <Button layoutX="281.0" layoutY="306.0" mnemonicParsing="false" onMouseClicked="#handleCreateClicked"
                prefHeight="31.0" prefWidth="73.0" text="Create"/>
    </children>
</AnchorPane>
